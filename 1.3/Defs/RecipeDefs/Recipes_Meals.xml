<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <RecipeDef Name="VCE_CookGourmetMealBase" Abstract="True">
    <fixedIngredientFilter>
      <categories>
        <li>FoodRaw</li>
		 <li>VCE_Condiments</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
		<li>VCE_Condiments</li>
      </categories>
      <disallowedCategories>
        <li>EggsFertilized</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>Meat_Human</li>
        <li>Meat_Megaspider</li>
        <li>InsectJelly</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>


  <RecipeDef ParentName="VCE_CookGourmetMealBase">
    <defName>VCE_CookMealGourmet</defName>
    <label>cook gourmet meal</label>
    <description>Cook a culinary work of art, characterized by refined, even elaborate preparation and presentation of an aesthetically balanced, albeit low quantity meal.</description>
    <jobString>Cooking gourmet meal.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>VanillaCookingExpanded.IngredientValueGetter_NutritionWithExtraIngredient</ingredientValueGetterClass>
	<recipeUsers>
		<li>ElectricStove</li>	
		<li>FueledStove</li>			
	</recipeUsers>
	
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>VCE_Condiments</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <VCE_MealGourmet>1</VCE_MealGourmet>
    </products>
    <skillRequirements>
      <Cooking>10</Cooking>
    </skillRequirements>
  </RecipeDef>
  
  

 

 

</Defs>
