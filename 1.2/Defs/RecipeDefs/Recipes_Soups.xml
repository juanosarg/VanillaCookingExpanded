		<recipeUsers>
			<li>ElectricStove</li>	
			<li>FueledStove</li>			
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<VCE_UncookedSoupFine>1</VCE_UncookedSoupFine>
		</products>
		<skillRequirements>
			<Cooking>6</Cooking>
		</skillRequirements>
		<researchPrerequisite>
			<li>VCE_SoupCooking</li>
		</researchPrerequisite>
	</RecipeDef>



