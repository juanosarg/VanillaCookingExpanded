	<RecipeDef ParentName="VCE_CookGourmetMealBase">
		<defName>VCE_CookSoupGourmet</defName>
		<label>prepare gourmet soup</label>
		<description>Prepare a gourmet uncooked soup. A culinary work of art, characterized by refined, even elaborate preparation and presentation of an aesthetically balanced, albeit low quantity soup.\n\nThis recipe does not allow mixed ingredients, and takes a long time to make.</description>
		<jobString>Preparing gourmet soup.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<recipeUsers>
			<li>ElectricStove</li>	
			<li>FueledStove</li>			
		</recipeUsers>

		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>VCE_Condiments</li>
					</categories>
				</filter>
				<count>7</count>
			</li>

		</ingredients>
		<products>
			<VCE_UncookedSoupGourmet>1</VCE_UncookedSoupGourmet>
		</products>
		<skillRequirements>
			<Cooking>10</Cooking>
		</skillRequirements>
		<researchPrerequisite>
